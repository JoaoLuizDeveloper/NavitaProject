@model NavitaWeb.Models.User
@{
    ViewData["Title"] = "Register";
}
<div class="row backgroundWhite border">
    <div class="col-md-12">
        <form  method="post">
            <h4>Registrar Novo Usuario.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="UserName"></label>
                </div>
                <div class="col-5">
                    <input asp-for="UserName" type="text" placeholder="Nome de Usuario ...." class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Email" type="text" placeholder="Email ...."  class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Password"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Password" type="password" placeholder="Senha ..." class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-5 offset-3">
                    <button type="submit" class="btn btn-primary form-control">Registrar</button>
                </div>
            </div>
        </form>
    </div>
</div>